# =============================================================================
# VPN Bot System - Environment Configuration
# =============================================================================

# Bot Configuration
BOT_TOKEN=1234567890:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
ADMIN_USER_ID=123456789
BOT_USERNAME=your_vpn_bot
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://vpnbot:password@localhost:5432/vpnbot_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vpnbot_db
DB_USER=vpnbot
DB_PASSWORD=your_secure_password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 3X-UI Panel Integration
XRAY_PANEL_URL=https://your-panel.domain.com
XRAY_USERNAME=admin
XRAY_PASSWORD=admin_password
XRAY_API_PATH=/panel/api/inbounds
XRAY_SESSION_TIMEOUT=3600

# Web Server Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000
ADMIN_PANEL_PORT=3000
API_SECRET_KEY=your-super-secret-api-key-here-make-it-long-and-random

# Domain & SSL Configuration
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com
CERTBOT_EMAIL=admin@your-domain.com

# Payment Systems Configuration

# Cryptocurrency Payments (CoinPayments, Coinbase, etc.)
CRYPTO_PAYMENT_PROVIDER=coinpayments
COINPAYMENTS_PUBLIC_KEY=your_coinpayments_public_key
COINPAYMENTS_PRIVATE_KEY=your_coinpayments_private_key
COINPAYMENTS_MERCHANT_ID=your_merchant_id
COINPAYMENTS_IPN_SECRET=your_ipn_secret

# Bank Cards (Stripe, PayPal, etc.)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live  # or sandbox for testing

# Russian Payment Systems
YOOMONEY_TOKEN=your_yoomoney_token
QIWI_SECRET_KEY=your_qiwi_secret_key

# Subscription Plans Configuration
DEFAULT_CURRENCY=USD
CURRENCY_RATES_API=https://api.exchangerate-api.com/v4/latest/USD

# VPN Plans (in cents for USD)
PLAN_1_MONTH_PRICE=500  # $5.00
PLAN_3_MONTH_PRICE=1400  # $14.00
PLAN_6_MONTH_PRICE=2500  # $25.00
PLAN_12_MONTH_PRICE=4500  # $45.00

# Traffic Limits (in GB)
PLAN_1_MONTH_TRAFFIC=100
PLAN_3_MONTH_TRAFFIC=300
PLAN_6_MONTH_TRAFFIC=600
PLAN_12_MONTH_TRAFFIC=1200

# Promo Codes Configuration
ENABLE_PROMO_CODES=true
DEFAULT_PROMO_DISCOUNT=10  # percentage

# Email Configuration (for notifications and receipts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/vpnbot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Telegram Notifications
NOTIFICATION_CHANNEL_ID=-1001234567890
ERROR_NOTIFICATION_CHAT_ID=123456789

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-make-it-very-long-and-random
JWT_EXPIRE_HOURS=24
SESSION_SECRET_KEY=your-session-secret-key
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # seconds
RATE_LIMIT_STORAGE=memory  # or redis

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880  # 5MB in bytes
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=24  # hours
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/vpnbot

# Monitoring & Analytics
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Proxy Configuration (if needed)
HTTP_PROXY=
HTTPS_PROXY=
PROXY_USERNAME=
PROXY_PASSWORD=

# Development Configuration
DEVELOPMENT_MODE=false
TEST_USER_ID=123456789
MOCK_PAYMENTS=false

# API Keys for External Services
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_telegram_api_hash
WEATHER_API_KEY=your_weather_api_key  # if you want weather in bot

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET_TOKEN=your-webhook-secret-token

# Docker Configuration
DOCKER_NETWORK=vpnbot_network
POSTGRES_DATA_PATH=/var/lib/postgresql/data
REDIS_DATA_PATH=/var/lib/redis
NGINX_CONFIG_PATH=/etc/nginx

# Localization
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en
TIMEZONE=Europe/Moscow

# Performance Configuration
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# SSL Configuration
SSL_CERTIFICATE_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
